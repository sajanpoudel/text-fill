{
  "manifest_version": 3,
  "name": "CheatResume - Text Fill",
  "version": "0.2.0",
  "description": "AI-powered writing assistant for emails, messages, forms, and job applications. Fill any text field with context-aware responses.",
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CheatResume - Text Fill",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png"
    }
  },
  "options_page": "options.html",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png", "pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
